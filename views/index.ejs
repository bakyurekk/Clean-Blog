<%- include('partials/_header.ejs') %>


<body>
  <!-- Navigation -->
  <%- include('partials/_navigation.ejs') %>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Clean Blog</h1>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">

        <!-- POST -->
        <%- include('partials/_post.ejs') -%>
        <!-- Pager -->
        <div class="clearfix">
          <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>
      </div>
    </div>

    <nav class="">
      <% if (pages > 0) { %>
        <ul class="pagination">
          <% for (i=1; i <=pages; i++) { %>
            <%   if (i == current) { %>
              <li class="page-item  active"><a href="/?page=<%= i %>" class="page-link rounded-pill  mx-2 px-3"><%= i %></a></li>
            <% } else if (i < pages) { %>
              <li class="page-item "><a href="/?page=<%= i %>" class="page-link rounded-pill mx-2 px-3"><%= i %></a></li>
            <%  } else { %>
              <li class="page-item "><a href="/?page=<%= i %>" class="page-link rounded-pill mx-2 px-3"><i class="fas fa-chevron-circle-right"></i></a></li>
            <%  } %>
          <%  } %>
        </ul>
      <% } %>
      </nav>


  </div>


  <hr />

  <!-- Footer -->
  <footer>
    <%- include('partials/_footer.ejs') -%>
  </footer>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>
</body>
</html>
